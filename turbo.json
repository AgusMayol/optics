{
"$schema": "https://turbo.build/schema.json",
	"globalPassThroughEnv": ["FLAGS_SECRET", "GROWTHBOOK_CLIENT_KEY"],
"tasks": {
    "dev": {
        "cache": false,
        "persistent": true,
        "dependsOn": ["sync:sources"]
    },
    "build": {
        "dependsOn": ["^build", "sync:sources"],
        "outputs": [".next/**", "registry/**/dist/**"]
    },
    "registry:build": {
        "dependsOn": ["sync:sources"],
        "outputs": ["registry/**"]
    },
    "lint": {
        "outputs": []
    },
    "format": {
        "cache": false
    },
    "sync:sources": {
        "outputs": []
    }
}
}